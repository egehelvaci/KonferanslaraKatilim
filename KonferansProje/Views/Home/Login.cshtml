@model KonferansProje.Models.admin_tbl
    @{
        ViewBag.Title = "Login";
    }
    <h3>@ViewBag.Message</h3>
    <style>
        .form {
            float: middle;
        }
    </style>

    <body>
        <div class="form" style="text-align:center" id="frm">
